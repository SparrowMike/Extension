{
  "name": "WorkWise",
  "description": "Stay motivated and organized. Get time, quotes, and a task manager. Add, update, or delete messages anytime.",
  "version": "0.0.7",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/p16.png",
    "32": "icons/p32.png",
    "128": "icons/p128.png"
  }
}